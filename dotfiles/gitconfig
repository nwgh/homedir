[user]
	name = Nicholas Hurley
	email = hurley@todesschaf.org
[core]
	excludesfile = ~/.gitignore
	pager = less -FRXi
	editor = vim
[svn]
	edit = true
[color]
	ui = auto
[merge]
	tool = p4merge
[alias]
	stat = status -sb
	cdiff = diff --cached
	staged = diff --cached
	fixup = !sh -c 'git commit -m \"fixup! $(git log -1 --format='\\''%s'\\'' $@)\"' -
	squash = !sh -c 'git commit -m \"squash! $(git log -1 --format='\\''%s'\\'' $@)\"' -
	asrebase = rebase -i --autosquash
	hgpatch = !sh -c 'git format-patch --stdout --no-signature -p -1 HEAD | hgify'
	tlog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	addrm = add -A
	slog = log --stat
	npush = push origin refs/notes/*
	flog = log --first-parent
	root = rev-parse --show-toplevel
[url "git@github.com:"]
	insteadOf = gh:
	insteadOf = github:
[try]
	repo = ~/src/mozilla/central
[push]
	default = simple
[inbound]
    repo = ~/src/mozilla/inbound
    interactive = true
    url = ssh://hg.mozilla.org/integration/mozilla-inbound
[aurora]
    repo = ~/src/mozilla/aurora
    interactive = true
    url = ssh://hg.mozilla.org/releases/mozilla-aurora
    base = mozilla/aurora
[beta]
    repo = ~/src/mozilla/beta
    interactive = true
    url = ssh://hg.mozilla.org/releases/mozilla-beta
    base = mozilla/beta
[release]
    repo = ~/src/mozilla/release
    interactive = true
    url = ssh://hg.mozilla.org/releases/mozilla-release
    base = mozilla/release
[diff]
	tool = p4merge
[difftool "p4merge"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $LOCAL $REMOTE
[mergetool "p4merge"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $PWD/$BASE $PWD/$REMOTE $PWD/$LOCAL $PWD/$MERGED
	trustExitCode = false
[mergetool]
	keepBackup = false
[help]
	autocorrect = 1
